<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= simple_form_for [@post, comment], remote: true do |f| %>
  <div>
    <%= f.input :body, label: false, placeholder:"Add Your Comment Here...", input_html: { class:"form-control", rows: 4 } %>
  </div>
  <div>
  <%= f.submit "Add comment", class:"btn btn-success btn-lg" %>
  </div>
  <br>
  <br>
  <br>
  <br>
  <% end %>
