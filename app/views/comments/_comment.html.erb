<div id='<%= dom_id(comment) %>' class="well" style="<%= style if defined?(style) %>">
  <p>Added by: <%= comment.user_full_name %></p>
  <p><%= comment.body %></p>
  <% if can? :edit, comment %>
  <%= link_to edit_post_comment_path(@post, comment),
                        remote: true,
                        data: {toggle: "modal", target: "#edit-comment"},
                        class: "btn btn-success btn-xs" do %>
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit Comment
        <% end %>


  <% end %>
  <% if can? :destroy, comment %>
  <%= link_to post_comment_path(@post, comment),
                        method: :delete,
                        remote: true,
                        data: {confirm: "Are you sure you want to delete this comment?"},
                        class: "btn btn-primary btn-xs" do %>
          <i class="fa fa-trash-o" aria-hidden="true"></i> Delete Comment
          <% end %>
  <% end %>
</div>
