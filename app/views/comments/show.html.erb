<p><%= @comment.body %></p>
<p><%= @comment.created_at %></p>
<% if can? :edit, @comment %>
<%= link_to "Edit", edit_comment_path(@comment) %>
<% end %>
<% if can? :destroy, @comment %>
<%= link_to "Delete", comment_path(@comment),
                      method: :delete,
                      data: {confirm: "Are you sure you want to delete this comment?"} %>
<% end %>
