<% if @post.favourited_by?(current_user) %>
  <%= link_to post_favourite_path(@post, @post.favourites_for(current_user)), remote: true, class: "btn btn-xs btn-warning", method: :delete do %>
  <i class="fa fa-star" aria-hidden="true"></i> Remove from favourites
  <% end %>
<% else %>
  <%= link_to post_favourites_path(@post), remote: true, class: "btn btn-xs btn-warning", method: :post do %>
    <i class="fa fa-star-o" aria-hidden="true"></i> Add to favourites
  <% end %>
<% end %>
