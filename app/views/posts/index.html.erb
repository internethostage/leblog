<div id="post-index-title">
  <span class="h1">All Posts</span>

  <span class="form-group form-inline">
    <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Term", class:"form-control input-lg" %>
    <%= submit_tag "Search Posts", class:"btn btn-success btn-sm"%>
    <% end %>
  </span>

</div>

  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Post Title</th>
        <th>Preview</th>
        <th>Comments</th>
      </tr>
    </thead>
    <% @posts.each do |post| %>
    <tbody>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.body_snippet %></td>
        <td class="text-center"><%= post.comments.count %></td>
      </tr>
    </tbody>
    <% end %>
  </table>


<div class="pagination center-block text-center">
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>
