<header class="intro-header front-page-image">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1><i class="fa fa-leaf" aria-hidden="true" style="color: #18BC9C"></i>LeBlog</h1>
                    <hr class="small">
                    <span class="subheading">One dream, one team &amp; one blog to post them all</span>
                </div>
            </div>
        </div>
    </div>
</header>



<div class="container">
  <div class="row">
    <div class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-sm-offset-1 col-sm-10 col-xs-12">
        <% @posts.each do |post| %>
        <div class="panel panel-info">
          <div class="panel-heading panel-title-gradient">
            <h2 class="panel-title lead"><%= link_to post.title, post_path(post) %></h2>
            <p class="pull-right label label-default">Category: <%= post.category %> </p>
            <p>Posted by <%= post.user_full_name %> on <span class="post-meta"> <%= post.created_at.strftime("%b %d, %Y") %></span></p>
          </div>
          <div class="panel-body">
            <p><%= post.body %> </p>
            <br>
          </div>
          <div class="panel-footer">
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
