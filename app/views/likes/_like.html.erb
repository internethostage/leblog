<% if @post.liked_by?(current_user) %>
  <%= link_to post_like_path(@post, @post.likes_for(current_user)), class: "btn btn-xs btn-danger", remote: true, method: :delete do %>
    <i class="fa fa-heart" aria-hidden="true"></i> Unlike Post
  <% end %>
<% else %>
  <%= link_to post_likes_path(@post), remote: true, class: "btn btn-xs btn-danger", method: :post do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i> Like Post
  <% end %>
<% end %>
